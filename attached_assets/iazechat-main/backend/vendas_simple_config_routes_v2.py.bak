@router.post("/simple-config")
async def save_simple_config(
    request: WASiteConfigV2,
    db: AsyncIOMotorDatabase = Depends(get_db)
):
    """
    Salvar configuraÃ§Ã£o do WA Site (V2 com retrocompatibilidade)
    """
    try:
        # Desativar todas as configs existentes
        await db.vendas_simple_config.update_many(
            {},
            {"$set": {"is_active": False}}
        )
        
        # Preparar dados
        config_data = request.dict()
        config_data["config_id"] = str(uuid.uuid4())
        config_data["created_at"] = datetime.now(timezone.utc).isoformat()
        config_data["updated_at"] = datetime.now(timezone.utc).isoformat()
        
        # Salvar
        print(f"ğŸ’¾ğŸ’¾ğŸ’¾ Salvando config com mode: {config_data.get('mode')}")
        logger.info(f"ğŸ’¾ Salvando config com mode: {config_data.get('mode')}")
        result = await db.vendas_simple_config.insert_one(config_data)
        print(f"ğŸ’¾ğŸ’¾ğŸ’¾ Config salvo no banco")
        logger.info(f"ğŸ’¾ Config salvo no banco")
        
        # ğŸ†• SYNC: Atualizar button_config na collection config para sincronizar o modo
        mode = config_data.get("mode", "ia")
        print(f"ğŸ”„ğŸ”„ğŸ”„ SYNC: Modo recebido do frontend: {mode}")
        logger.info(f"ğŸ”„ SYNC: Modo recebido do frontend: {mode}")
        
        # Buscar button_config atual ou criar padrÃ£o
        config_doc = await db.config.find_one({"id": "config"})
        logger.info(f"ğŸ”„ SYNC: Config doc encontrado: {config_doc is not None}")
        
        if config_doc and "button_config" in config_doc:
            button_config = config_doc["button_config"]
            logger.info(f"ğŸ”„ SYNC: button_config existente - mode anterior: {button_config.get('mode')}")
            button_config["mode"] = mode
            button_config["is_enabled"] = mode in ["button", "hybrid"]
            logger.info(f"ğŸ”„ SYNC: button_config atualizado - mode novo: {button_config['mode']}, is_enabled: {button_config['is_enabled']}")
        else:
            button_config = {
                "mode": mode,
                "is_enabled": mode in ["button", "hybrid"],
                "welcome_message": "OlÃ¡! Como posso ajudar vocÃª?",
                "root_buttons": []
            }
            logger.info(f"ğŸ”„ SYNC: button_config criado novo - mode: {mode}")
        
        result_update = await db.config.update_one(
            {"id": "config"},
            {
                "$set": {
                    "id": "config",
                    "button_config": button_config
                }
            },
            upsert=True
        )
        logger.info(f"ğŸ”„ SYNC: Update result - matched: {result_update.matched_count}, modified: {result_update.modified_count}")
        
        logger.info(f"âœ… Config V2 salva: {config_data['config_id']} (mode: {mode})")
        
        return {
            "success": True,
            "message": "ConfiguraÃ§Ã£o salva com sucesso",
            "config_id": config_data["config_id"]
        }
        
    except Exception as e:
        logger.error(f"âŒ Erro ao salvar config: {e}")
        raise HTTPException(status_code=500, detail=str(e))
